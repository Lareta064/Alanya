							.contact-list.info-card
								//=== contact-item==
								a(href="tel:+78314690360").info-card-item.fl-block
									.info-card__icon
										svg.svg-call
											use(href="./img/spriteSvg.svg#svg-call")
									
									.info-card__text
										.txt-upper Телефон
										.txt-semi +7 (831) 469-03-60

								//=== contact-item==
								a(href="mailto:abv@minec.kreml.nnov.ru").info-card-item.fl-block
									.info-card__icon
										svg.svg-mail
